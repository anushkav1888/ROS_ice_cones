
  <launch>
  <arg name="namespace"/>
  <arg name="x_pos" default=" 2.25"/>
  <arg name="y_pos" default=" 0"/>
  <arg name="z_pos" default=" 0.0"/>
  <arg name="yaw"   default=" 0.0"/>
  <group ns = "$(arg namespace)">
    <param name="robot_description" command="$(find xacro)/xacro --inorder $(find turtlebot3_description)/urdf/turtlebot3_$(arg model).urdf.xacro" />

    <node pkg="robot_state_publisher" type="robot_state_publisher" name="robot_state_publisher" output="screen">
      <param name="publish_frequency" type="double" value="50.0" />
      <param name="tf_prefix" value="$(arg namespace)" />
    </node>
    
    <node name="spawn_urdf" pkg="gazebo_ros" type="spawn_model" args="-urdf -model $(arg namespace) -x $(arg x_pos) -y $(arg y_pos) -z $(arg z_pos) -Y $(arg yaw) -param robot_description" />
    <node pkg="swarm_aggregation" type="dynamic_with_CA.py" name="multi_bot1" output="screen">
      <remap from="/odom" to="/$(arg namespace)/odom"/>
      <remap from="/cmd_vel" to="/$(arg namespace)/cmd_vel"/>
      <remap from="/goal" to="/$(arg namespace)/goal"/>
    </node>
  </group>
  </launch>